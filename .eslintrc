{
    "rules": {
        "indent": [1, 2],
        "no-extra-boolean-cast": [1],
        "no-empty": [1],
        "no-lonely-if": [2],
        "no-inner-declarations": [2, "both"],
        "keyword-spacing": [2],
        "space-before-blocks": [2],
        "space-before-function-paren": [2, "never"],
        "no-console": [0],
        "comma-dangle": [1],
        "eol-last": [2],
        "no-unused-vars": [1, {"vars": "all", "args": "none"}],
        "linebreak-style": [2, "unix"],
        "semi": [1, "always"],
        "eqeqeq": [2],
        "react/react-in-jsx-scope": 2,
        "react/no-danger": 0,
        "no-else-return": [2],
        "dot-notation": [2],
        "no-eq-null": [2],
        "no-return-assign": [2],
        "radix": [2],
        "handle-callback-err": [2]
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "commonjs": true,
        "mocha": "true"
    },
    "globals": {
      "$": true,
      "Stripe",
      "StripeCheckout"
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
      "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"]
}
