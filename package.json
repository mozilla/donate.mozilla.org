
{
  "name": "donate.mozilla.org",
  "version": "0.0.1",
  "description": "Mozilla's Donation Forms",
  "main": "server.js",
  "scripts": {
    "start": "node scripts/build",
    "start:prod": "node server.js",
    "start:dev": "npm-run-all --parallel watch:js server webpackserver watch:css",
    "postinstall": "npm-run-all build:js build:css",
    "build:js": "webpack",
    "build:css": "npm run watch:css -- --no-watch",
    "watch:js": "webpack -w -h",
    "watch:css": "mkdirp public/css && autoless less public/css --autoprefix '> 1%, last 2 versions'  --source-map",
    "webpackserver": "webpack-dev-server --content-base public",
    "server": "node server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla/donate.mozilla.org.git"
  },
  "keywords": [
    "donations",
    "forms",
    "mozilla"
  ],
  "author": "Mozilla",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla/donate.mozilla.org/issues"
  },
  "homepage": "https://github.com/mozilla/donate.mozilla.org#readme",
  "dependencies": {
    "autoless": "^0.1.7",
    "babel-core": "^5.5.6",
    "babel-loader": "^5.1.4",
    "cross-spawn": "^0.4.0",
    "good": "^6.1.4",
    "good-console": "^5.0.2",
    "habitat": "^3.1.2",
    "hapi": "^8.6.1",
    "json-loader": "0.5.1",
    "jsx-loader": "0.13.2",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.2.5",
    "react": "^0.13.3",
    "react-router": "^0.13.3",
    "stripe": "~2.2.0",
    "webpack": "^1.9.10"
  },
  "devDependencies": {
    "react-hot-loader": "^1.2.7",
    "webpack-dev-server": "^1.9.0"
  }
}
